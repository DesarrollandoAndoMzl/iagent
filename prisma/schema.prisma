generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id           String   @id @default(uuid())
  name         String
  description  String?
  systemPrompt String   @default("Eres un asistente Ãºtil.")
  voiceName    String   @default("Kore")
  language     String   @default("es")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Gemini generation params
  temperature     Float   @default(0.7)
  topP            Float   @default(0.95)
  topK            Int     @default(40)
  maxOutputTokens Int     @default(1000)

  // Gemini Live session features
  enableAffectiveDialog Boolean @default(true)
  enableProactiveAudio  Boolean @default(false)
  thinkingBudget        Int     @default(0)

  // VAD: "low" | "high"
  vadSensitivity String @default("low")

  knowledgeDocs KnowledgeDoc[]
  callSessions  CallSession[]
}

model KnowledgeDoc {
  id        String   @id @default(uuid())
  filename  String
  content   String
  fileUrl   String?
  isGlobal  Boolean  @default(false)
  agentId   String?
  agent     Agent?   @relation(fields: [agentId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model CallSession {
  id              String    @id @default(uuid())
  agentId         String
  agent           Agent     @relation(fields: [agentId], references: [id])
  startedAt       DateTime  @default(now())
  endedAt         DateTime?
  durationSeconds Int?
  transcription   String?
  recordingUrl    String?
  tokenCount      Int?      @default(0)
  estimatedCost   Float?    @default(0)
  status          String    @default("active")
  metadata        String?
  createdAt       DateTime  @default(now())
}
